<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/chatlistimageView"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/profilebg" />

     <TextView
         android:id="@+id/d_contactname"
         style="@style/button_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:text="TextView" />

     <com.vas2nets.fuse.image.CircularImageView
         android:id="@+id/contactImageView"
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:layout_alignBottom="@+id/chatlistimageView"
         android:layout_alignParentRight="true"
         android:layout_marginRight="20dp"
         android:src="@drawable/noface" />

     <Button
         android:id="@+id/cancelpbutton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:background="#33b5e5"
         android:text="Free SMS"
        android:width="90dp" />

     <TextView
         android:id="@+id/d_contactnumber"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/updatebutton"
         android:layout_below="@+id/updatebutton"
         android:layout_marginTop="49dp"
         android:text="TextView"
         android:textSize="17sp" />

     <ImageView
         android:id="@+id/imageView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/d_contactnumber"
         android:layout_below="@+id/d_contactnumber"
         android:layout_marginTop="24dp"
         android:src="@drawable/ic_action_call"
         android:onClick="startCall" />

     <Button
         android:id="@+id/updatebutton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/cancelpbutton"
         android:layout_alignBottom="@+id/cancelpbutton"
         android:layout_alignLeft="@+id/d_contactname"
         android:background="#33b5e5"
         android:onClick="startFreeCall"
         android:text="Free Call"
         android:width="90dp" />

     <Button
         android:id="@+id/usevoicenotebutton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/cancelpbutton"
         android:layout_alignBottom="@+id/cancelpbutton"
         android:layout_alignParentRight="true"
         android:layout_marginRight="5dp"
         android:background="#33b5e5"
         android:onClick="startChat"
         android:text="Chat"
         android:width="90dp" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/imageView2"
         android:layout_toRightOf="@+id/d_contactnumber"
         android:onClick="startSMS"
         android:src="@drawable/ic_action_email" />

</RelativeLayout>
