<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/chatlistimageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/noface" />

    <TextView
        android:id="@+id/chatlistnametextView"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/chatlistimageView"
        android:text="Fuse" />

    <TextView
        android:id="@+id/chatlistmessagetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chatlistimageView"
        android:layout_alignLeft="@+id/chatlistnametextView"
        android:layout_marginBottom="14dp"
        android:text="Hello" />

    <TextView
        android:id="@+id/chatlisttimetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chatlistnametextView"
        android:layout_alignBottom="@+id/chatlistnametextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="8:15" />

</RelativeLayout>
